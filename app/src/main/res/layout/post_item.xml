<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/profilePic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name_of_post_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Name"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintLeft_toRightOf="@id/profilePic"
                app:layout_constraintTop_toTopOf="@id/profilePic" />

            <TextView
                android:id="@+id/time_place_of_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:12 am | Kanpur, UP"
                app:layout_constraintLeft_toLeftOf="@id/name_of_post_creator"
                app:layout_constraintTop_toBottomOf="@id/name_of_post_creator" />


            <TextView
                android:id="@+id/caption_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to create a single activity with multiple fragments in the application or you can create multiple activities as well.

